{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2017",
    "module":"es6",
    "lib": ["es2015", "es2016", "es2017", "es2019", "dom", "dom.iterable"],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "dist/types",
    "outDir": "dist/lib",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src"
  ]
}
